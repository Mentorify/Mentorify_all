# Server Configuration
PORT=5020
NODE_ENV=development

# Database Configuration
# For local MongoDB
DATABASE=mongodb://127.0.0.1:27017/mentorify
# For MongoDB Atlas (cloud)
# DATABASE=mongodb+srv://<username>:<password>@cluster.mongodb.net/mentorify?retryWrites=true&w=majority

# JWT Secret Key
# Generate a secure random string for production
SECRET_KEY=your_secure_secret_key_here_change_in_production

# Super Admin Configuration
SUPER_ADMIN_EMAIL=superadmin@example.com

# Email Configuration (for password reset and notifications)
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password_or_app_password

# Email Service Provider (optional)
# EMAIL_SERVICE=gmail
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587

